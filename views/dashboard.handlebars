<h2 class="mb-3">Dashboard</h2>
<div class="container d-flex flex-column">
    <a class="btn btn-dark bg-navy align-self-end px-4 mx-4 rounded-pill" href="/dashboard/new">+ New Post</a>
    <div class="card m-3 border-dark">
        <h3 class="card-header bg-dark text-white">Your Posts</h3>
        <div class="card-body">
            {{#each posts}}
            <div class="card m-2 border border-dark">
                <a class="card-body d-flex flex-column flex-sm-row justify-content-between align-items-start text-decoration-none" href="/post/{{id}}">
                    <div class="ms-sm-2 me-sm-auto">
                        <div class="fw-bold fs-5">{{title}}</div>
                        <small class="text-muted">Posted At: {{format_time createdAt}} on {{format_date createdAt}}</small>
                    </div>
                    <div class="d-flex flex-column align-items-start align-items-sm-end">
                        <div>
                            <span class="fw-bold">Comments</span>                 
                            <span class="badge text-white bg-green rounded-pill">{{postComments.length}}</span>
                        </div>
                        <div>
                            <small class="text-muted">{{format_date createdAt}}</small>
                        </div>
                    </div>
                </a>
            </div>
            {{/each}}
            {{#unless posts}}
            <h4 class="text-center">You have no Posts</h4>
            {{/unless}}
        </div>
    </div>
</div>